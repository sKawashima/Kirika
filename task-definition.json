{
  "family": "kirika",
  "executionRoleArn": "ecsTaskExecutionRole",
  "containerDefinitions": [{
    "name": "kirika-api",
    "image": ".",
    "cpu": 10,
    "memory": 512,
    "portMappings": [{
      "containerPort": 80,
      "hostPort": 80,
      "protocol": "tcp"
    }],
    "essential": true,
    "secrets": [{
      "name": "SLACK_SIGNING_SECRET",
      "valueFrom": "SLACK_SIGNING_SECRET"
    },
    {
      "name": "SLACK_BOT_TOKEN",
      "valueFrom": "SLACK_BOT_TOKEN"
    }]
  }],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512"
}
